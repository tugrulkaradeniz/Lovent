<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header - Creator Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:paddingBottom="12dp">

            <!-- Creator Photo -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_creator_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_placeholder"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Creator Name -->
                <TextView
                    android:id="@+id/tv_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmet Yılmaz"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Event Time -->
                <TextView
                    android:id="@+id/tv_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Ocak, 14:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Category Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_category"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Açık Hava"
                android:textSize="12sp"
                app:chipCornerRadius="14dp"
                app:chipStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

        </LinearLayout>

        <!-- Event Image (Optional) -->
        <ImageView
            android:id="@+id/iv_event_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Event Image" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boğaz'da Piknik 🧺"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haftasonu güzel bir piknik yapalım! Yemekleri ben getireceğim."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Emirgan Korusu"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:drawablePadding="4dp" />

        </LinearLayout>

        <!-- Tags -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layout_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="16dp" />

        </HorizontalScrollView>

        <!-- Participants & Price Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">

            <!-- Participant Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_participant_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/15 katılımcı"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <!-- Capacity Progress -->
                <ProgressBar
                    android:id="@+id/progress_capacity"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:progress="53"
                    android:max="100"
                    android:progressTint="@color/primary_color"
                    android:progressBackgroundTint="@color/background_grey" />

            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ücretsiz"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- Join Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Katıl"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconSize="18dp"
                android:layout_marginEnd="8dp" />

            <!-- Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_share"
                app:iconGravity="textStart"
                app:iconSize="18dp"
                app:strokeColor="@color/primary_color"
                app:iconTint="@color/primary_color"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>